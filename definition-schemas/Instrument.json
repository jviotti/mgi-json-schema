{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Instrument",
  "type": "object",
  "definitions": {
    "Instrument": {
      "type": "object",
      "properties": {
        "address": {
          "title": "Physical Address or Building Location",
          "type": "string",
          "format": "textarea"
        },
        "conditionObserved": {
          "title": "Conditions Observed",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Condition Observed",
            "$ref": "PropertyValue.json#/definitions/PropertyValue"
          }
        },
        "hasPart": {
          "title": "Has Parts",
          "type": "array",
          "items": {
            "title": "Has Child Part",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Instrument"
                  ]
                }
              }
            }
          }
        },
        "isBasedOn": {
          "title": "Is Based On",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Product",
            "$ref": "Product.json#/definitions/Product"
          }
        },
        "isPartOf": {
          "title": "Has Parent Instruments and Collections",
          "type": "array",
          "items": {
            "title": "Has Parent Instrument or Collection",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Collection",
                    "Instrument"
                  ]
                }
              }
            }
          }
        },
        "parameterControlled": {
          "title": "Parameters Controlled",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Parameter Controlled",
            "$ref": "PropertyValue.json#/definitions/PropertyValue"
          }
        },
        "variableMeasured": {
          "title": "Variables Measured",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Variable Measured",
            "$ref": "PropertyValue.json#/definitions/PropertyValue"
          }
        }
      }
    }
  }
}
