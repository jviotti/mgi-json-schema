{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Person",
  "type": "object",
  "definitions": {
    "Person": {
      "type": "object",
      "properties": {
        "additionalName": {
          "title": "Middle Name(s)",
          "type": "string"
        },
        "address": {
          "title": "Physical Address",
          "type": "string",
          "format": "textarea"
        },
        "affiliation": {
          "title": "Affiliations",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Affiliation",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Organization"
                  ]
                }
              }
            }
          }
        },
        "email": {
          "title": "E-Mail Address",
          "type": "string",
          "cordra": {
            "preview": {
              "showInPreview": true
            }
          }
        },
        "familyName": {
          "title": "Family Name",
          "type": "string"
        },
        "givenName": {
          "title": "Given Name",
          "type": "string"
        },
        "telephone": {
          "title": "Telephone",
          "type": "string"
        },
        "workLocation": {
          "title": "Work Location",
          "description": "A location where a person performs work (e.g., office, laboratory).",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Place",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Place"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
