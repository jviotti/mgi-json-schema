{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "InstrumentAction",
  "type": "object",
  "definitions": {
    "InstrumentAction": {
      "type": "object",
      "properties": {
        "about": {
          "title": "About",
          "description": "This is for linking controlled vocabulary terms and parent projects.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Subject/Project",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "DefinedTerm",
                    "Project",
                    "Collection"
                  ]
                }
              }
            }
          }
        },
        "accountablePerson": {
          "title": "Accountable Persons",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Accountable Person",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "User",
                    "Person"
                  ]
                }
              }
            }
          }
        },
        "actionStatus": {
          "title": "Action Status",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Defined Term",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "DefinedTerm"
                  ]
                }
              }
            }
          }
        },
        "agent": {
          "title": "Agents",
          "description": "The direct performer or driver of the action (animate or inanimate).",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Agent",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "User",
                    "Person",
                    "Organization"
                  ]
                }
              }
            }
          }
        },
        "comment": {
          "title": "Comments",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Comment",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Comment"
                  ]
                }
              }
            }
          }
        },
        "conditionObserved": {
          "title": "Conditions Observed",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Condition Observed",
            "$ref": "PropertyValue.json#/definitions/PropertyValue"
          }
        },
        "endTime": {
          "title": "End Time",
          "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
          "type": "string"
        },
        "error": {
          "title": "Error Records",
          "$ref": "datasetLinked.json#/definitions/hasPart"
        },
        "hasPart": {
          "$ref": "datasetLinked.json#/definitions/hasPart"
        },
        "instrument": {
          "title": "Helping instrument",
          "description": "The instrument or tool that helped the agent perform the action",
          "$ref": "measurementTechnique.json#/definitions/measurementTechnique"
        },
        "keywords": {
          "title": "Keywords",
          "description": "This is for user-defined terms.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Keyword",
            "type": "string"
          }
        },
        "location": {
          "title": "Specific Spatial Location",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Place",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Place"
                  ]
                }
              }
            }
          }
        },
        "material": {
          "title": "Material",
          "$ref": "materialLinked.json#/definitions/materialLinked"
        },
        "materialExtent": {
          "title": "Material Quantity",
          "$ref": "QuantitativeValue.json#/definitions/QuantitativeValue"
        },
        "materialReference": {
          "title": "Reference Material",
          "$ref": "materialLinked.json#/definitions/materialLinked"
        },
        "materialReferenceExtent": {
          "title": "Reference Material Quantity",
          "$ref": "QuantitativeValue.json#/definitions/QuantitativeValue"
        },
        "object": {
          "title": "Object instrument",
          "description": "The instrument upon which the action is carried out",
          "$ref": "measurementTechnique.json#/definitions/measurementTechnique"
        },
        "parameterControlled": {
          "title": "Parameters Controlled",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Parameter Controlled",
            "$ref": "PropertyValue.json#/definitions/PropertyValue"
          }
        },
        "participant": {
          "title": "Participants",
          "description": "Other co-agents that participated in the action indirectly.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Participant",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "User",
                    "Person",
                    "Organization"
                  ]
                }
              }
            }
          }
        },
        "result": {
          "title": "Result Records",
          "$ref": "datasetLinked.json#/definitions/hasPart"
        },
        "startTime": {
          "title": "Start Time",
          "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
          "type": "string"
        },
        "variableMeasured": {
          "title": "Variables Measured",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Variable Measured",
            "$ref": "PropertyValue.json#/definitions/PropertyValue"
          }
        }
      }
    }
  }
}
