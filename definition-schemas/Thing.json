{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Thing",
  "type": "object",
  "definitions": {
    "Thing": {
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "type": "string",
          "format": "textarea",
          "cordra": {
            "preview": {
              "showInPreview": true
            }
          }
        },
        "alternateName": {
          "title": "Alternate Name",
          "type": "string",
          "cordra": {
            "preview": {
              "showInPreview": true
            }
          }
        },
        "identifier": {
          "title": "Identifers",
          "type": "array",
          "items": {
            "title": "Identifer",
            "type": "object",
            "properties": {
              "@type": {
                "default": "PropertyValue",
                "type": "string"
              },
              "name": {
                "title": "Identifier Type/Name",
                "type": "string"
              },
              "propertyID": {
                "title": "Property IDs",
                "type": "array",
                "uniqueItems": true,
                "items": {
                  "title": "Property ID",
                  "type": "string",
                  "cordra": {
                    "type": {
                      "handleReference": {
                        "types": [
                          "DefinedTerm"
                        ]
                      }
                    }
                  }
                }
              },
              "url": {
                "title": "Identifier URL",
                "type": "string"
              },
              "value": {
                "title": "Identifier Value"
              }
            }
          }
        },
        "image": {
          "title": "Image URLs",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Image URL",
            "type": "string"
          }
        },
        "name": {
          "title": "Name",
          "type": "string",
          "cordra": {
            "preview": {
              "isPrimary": true,
              "showInPreview": true
            }
          }
        },
        "subjectOf": {
          "title": "Subject Of",
          "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Referenced Item",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": []
                }
              }
            }
          }
        },
        "url": {
          "title": "URL",
          "type": "string"
        }
      }
    }
  }
}
