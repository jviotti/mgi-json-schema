{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Product",
  "type": "object",
  "definitions": {
    "Product": {
      "type": "object",
      "properties": {
        "brand": {
          "type": "string"
        },
        "manufacturer": {
          "title": "Manufacturers",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Manufacturer",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "User",
                    "Person",
                    "Organization"
                  ]
                }
              }
            }
          }
        },
        "model": {
          "type": "string"
        },
        "productID": {
          "type": "string"
        },
        "productionDate": {
          "title": "Production Date",
          "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
          "type": "string"
        },
        "purchaseDate": {
          "title": "Purchase Date",
          "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
          "type": "string"
        },
        "serialNumber": {
          "title": "Serial Number",
          "type": "string"
        }
      }
    }
  }
}
