{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "SoftwareSourceCode",
  "type": "object",
  "definitions": {
    "SoftwareSourceCode": {
      "type": "object",
      "properties": {
        "codeRepository": {
          "title": "Code Repository URL",
          "type": "string"
        },
        "isBasedOn": {
          "$ref": "datasetLinked.json#/definitions/isBasedOn"
        },
        "isPartOf": {
          "title": "Is Part Of",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Is Part Of",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Collection"
                  ]
                }
              }
            }
          }
        },
        "programmingLanguage": {
          "title": "Programming Language",
          "type": "string"
        },
        "targetProduct": {
          "title": "Software Applications",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Software Application",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "SoftwareApplication"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
