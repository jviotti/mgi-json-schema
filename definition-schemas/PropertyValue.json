{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "PropertyValue",
  "type": "object",
  "definitions": {
    "PropertyValue": {
      "type": "object",
      "properties": {
        "@type": {
          "default": "PropertyValue",
          "type": "string"
        },
        "conditionObserved": {
          "title": "Conditions Observed (nested)",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Condition Observed",
            "$ref": "#/definitions/PropertyValue"
          }
        },
        "maxValue": {
          "title": "Maximum Value"
        },
        "minValue": {
          "title": "Minimum Value"
        },
        "name": {
          "title": "Name",
          "type": "string"
        },
        "parameterControlled": {
          "title": "Parameters Controlled (nested)",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Parameter Controlled",
            "$ref": "#/definitions/PropertyValue"
          }
        },
        "propertyID": {
          "title": "Property IDs",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Property ID",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "DefinedTerm"
                  ]
                }
              }
            }
          }
        },
        "uncertainty": {
          "title": "Uncertainty"
        },
        "unitCode": {
          "title": "Unit Code",
          "type": "string",
          "cordra": {
            "type": {
              "handleReference": {
                "types": [
                  "UnitOfMeasurement"
                ]
              }
            }
          }
        },
        "unitText": {
          "title": "Unit Text",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "value": {
          "title": "Value"
        },
        "valueID": {
          "title": "Value IDs",
          "description": "A commonly used identifier for the value represented by the property. This can be used when the value of the property is a DefinedTerm.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Value ID",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "DefinedTerm"
                  ]
                }
              }
            }
          }
        },
        "valueReference": {
          "title": "Reference Values",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Reference Value",
            "type": "object",
            "properties": {
              "@type": {
                "default": "PropertyValue",
                "type": "string"
              },
              "name": {
                "title": "Name",
                "type": "string"
              },
              "propertyID": {
                "title": "Property ID/Name",
                "type": "string",
                "cordra": {
                  "type": {
                    "handleReference": {
                      "types": [
                        "DefinedTerm"
                      ]
                    }
                  }
                }
              },
              "unitCode": {
                "title": "Unit Code",
                "type": "string",
                "cordra": {
                  "type": {
                    "handleReference": {
                      "types": [
                        "UnitOfMeasurement"
                      ]
                    }
                  }
                }
              },
              "unitText": {
                "title": "Unit Text",
                "type": "string"
              },
              "value": {
                "title": "Value"
              },
              "valueID": {
                "title": "Value IDs",
                "description": "A commonly used identifier for the value represented by the property. This can be used when the value of the property is a DefinedTerm.",
                "type": "array",
                "uniqueItems": true,
                "items": {
                  "title": "Value ID",
                  "type": "string",
                  "cordra": {
                    "type": {
                      "handleReference": {
                        "types": [
                          "DefinedTerm"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "variableMeasured": {
          "title": "Variables Measured (nested)",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Complex/Multidimensional Quantity",
            "$ref": "#/definitions/PropertyValue"
          }
        }
      }
    }
  }
}
