{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CordraUser",
  "type": "object",
  "definitions": {
    "CordraUser": {
      "type": "object",
      "properties": {
        "password": {
          "title": "Password",
          "type": "string",
          "format": "password",
          "cordra": {
            "auth": "password"
          }
        },
        "publicKey": {
          "type": "object",
          "cordra": {
            "auth": "publicKey"
          }
        },
        "requirePasswordChange": {
          "title": "Require Password Change",
          "description": "If true a new password must be set on next authentication.",
          "type": "boolean",
          "cordra": {
            "auth": "requirePasswordChange"
          }
        },
        "username": {
          "title": "Username",
          "type": "string",
          "cordra": {
            "auth": "username",
            "preview": {
              "showInPreview": true
            }
          }
        }
      }
    }
  }
}
