{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Place",
  "type": "object",
  "definitions": {
    "Place": {
      "type": "object",
      "properties": {
        "about": {
          "title": "About",
          "description": "This is for linking controlled vocabulary terms and parent projects.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Subject/Project",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "DefinedTerm",
                    "Project",
                    "Collection",
                    "ProcessHistory",
                    "ProcessProtocol",
                    "Material"
                  ]
                }
              }
            }
          }
        },
        "accountablePerson": {
          "title": "Accountable Persons",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Accountable Person",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "User",
                    "Person"
                  ]
                }
              }
            }
          }
        },
        "address": {
          "title": "Address",
          "type": "string"
        },
        "containedInPlace": {
          "title": "Contained In Place",
          "description": "The basic containment relation between a place and one that contains it.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Place",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Place"
                  ]
                }
              }
            }
          }
        },
        "containsPlace": {
          "title": "Contains Place",
          "description": "The basic containment relation between a place and another that it contains.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Place",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Place"
                  ]
                }
              }
            }
          }
        },
        "geo": {
          "anyOf": [
            {
              "title": "GeoCoordinates",
              "type": "object",
              "properties": {
                "@type": {
                  "default": "GeoCoordinates",
                  "type": "string"
                },
                "elevation": {
                  "title": "Elevation",
                  "type": "number"
                },
                "latitude": {
                  "title": "Latitude",
                  "type": "number"
                },
                "longitude": {
                  "title": "Longitude",
                  "type": "number"
                }
              }
            },
            {
              "title": "GeoShape",
              "type": "object",
              "properties": {
                "@type": {
                  "default": "GeoShape",
                  "type": "string"
                },
                "box": {
                  "title": "Box"
                },
                "circle": {
                  "title": "Circle"
                },
                "elevation": {
                  "title": "Elevation",
                  "type": "number"
                },
                "line": {
                  "title": "Line"
                },
                "polygon": {
                  "title": "PolyGon"
                }
              }
            }
          ]
        },
        "keywords": {
          "title": "Keywords",
          "description": "This is for user-defined terms.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Keyword",
            "type": "string"
          }
        },
        "telephone": {
          "title": "Telephone",
          "type": "string"
        }
      }
    }
  }
}
