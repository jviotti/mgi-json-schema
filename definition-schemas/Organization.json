{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Organization",
  "type": "object",
  "definitions": {
    "Organization": {
      "type": "object",
      "properties": {
        "address": {
          "title": "Physical Address",
          "type": "string",
          "format": "textarea"
        },
        "contactPoint": {
          "title": "Contact Points",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Contact Point",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Person",
                    "User"
                  ]
                }
              }
            }
          }
        },
        "email": {
          "title": "E-Mail Address",
          "type": "string"
        },
        "member": {
          "title": "Member Organizations/Persons",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Member Organization/Person",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Organization",
                    "User",
                    "Person"
                  ]
                }
              }
            }
          }
        },
        "memberOf": {
          "title": "Member of Organizations",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Member of Organization",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Organization"
                  ]
                }
              }
            }
          }
        },
        "parentOrganization": {
          "title": "Parent Organizations",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Parent Organization",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Organization"
                  ]
                }
              }
            }
          }
        },
        "subOrganization": {
          "title": "Child Organizations",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Child Organization",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Organization"
                  ]
                }
              }
            }
          }
        },
        "telephone": {
          "title": "Telephone",
          "type": "string"
        }
      }
    }
  }
}
