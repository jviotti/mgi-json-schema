{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Process",
  "type": "object",
  "definitions": {
    "Process": {
      "type": "object",
      "properties": {
        "@type": {
          "default": [
            "HowToStep",
            "mat:Process"
          ],
          "type": "array"
        },
        "about": {
          "title": "About",
          "description": "The subject matter of this thing (e.g., DefinedTerm, Project, Material, Experiment, Study, etc.)",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Referenced Item",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": []
                }
              }
            }
          }
        },
        "conditionObserved": {
          "title": "Conditions Observed",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Condition Observed",
            "$ref": "PropertyValue.json#/definitions/PropertyValue"
          }
        },
        "estimatedCost": {
          "title": "MonetaryAmount",
          "type": "object",
          "properties": {
            "@type": {
              "default": "MonetaryAmount",
              "type": "string"
            },
            "currency": {
              "type": "string"
            },
            "value": {
              "type": "number"
            }
          }
        },
        "hasPart": {
          "title": "Subprocess",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Subprocess",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "ProcessProtocol",
                    "ProcessHistory"
                  ]
                }
              }
            }
          }
        },
        "image": {
          "title": "Image URLs",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Image URL",
            "type": "string"
          }
        },
        "isBasedOn": {
          "title": "Process is based on",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Process",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "ProcessProtocol",
                    "ProcessHistory"
                  ]
                }
              }
            }
          }
        },
        "isPartOf": {
          "title": "Parent Process and Collections",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Parent Process or Collection",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "Collection",
                    "ProcessProtocol",
                    "ProcessHistory"
                  ]
                }
              }
            }
          }
        },
        "keywords": {
          "title": "Keywords",
          "description": "This is for user-defined terms.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Keyword",
            "type": "string"
          }
        },
        "measurementTechnique": {
          "$ref": "measurementTechnique.json#/definitions/measurementTechnique"
        },
        "name": {
          "title": "Name",
          "type": "string",
          "cordra": {
            "preview": {
              "isPrimary": true,
              "showInPreview": true
            }
          }
        },
        "parameterControlled": {
          "title": "Parameters Controlled",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Parameter Controlled",
            "$ref": "PropertyValue.json#/definitions/PropertyValue"
          }
        },
        "performTime": {
          "type": "string"
        },
        "position": {
          "title": "Step Number",
          "type": "number"
        },
        "prepTime": {
          "type": "string"
        },
        "step": {
          "title": "Process Steps",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Process Step",
            "$ref": "#/definitions/Process"
          }
        },
        "supply": {
          "$ref": "processLinked.json#/definitions/supply"
        },
        "text": {
          "title": "Process/Step Text",
          "type": "string",
          "format": "textarea"
        },
        "thumbnailUrl": {
          "title": "Thumbnail URLs",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Thumbnail URL",
            "type": "string"
          }
        },
        "tool": {
          "title": "Tools used to perform the process",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Tools used to perform the process",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "DefinedTerm",
                    "Instrument",
                    "SoftwareApplication",
                    "SoftwareSourceCode"
                  ]
                }
              }
            }
          }
        },
        "totalTime": {
          "type": "string"
        },
        "variableMeasured": {
          "title": "Variables Measured",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Variable Measured",
            "$ref": "PropertyValue.json#/definitions/PropertyValue"
          }
        },
        "workExample": {
          "$ref": "processLinked.json#/definitions/workExample"
        },
        "yield": {
          "$ref": "QuantitativeValue.json#/definitions/QuantitativeValue"
        }
      }
    }
  }
}
