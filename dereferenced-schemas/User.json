{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Person",
  "description": "This schema is for describing a registered User in Cordra.",
  "type": "object",
  "required": [
    "@id",
    "@context",
    "@type",
    "username",
    "password"
  ],
  "properties": {
    "description": {
      "title": "Description",
      "type": "string",
      "format": "textarea",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "@context": {
      "default": "http://schema.org/",
      "type": "string"
    },
    "@id": {
      "type": "string",
      "cordra": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "@type": {
      "default": "Person",
      "type": "string"
    },
    "additionalName": {
      "title": "Middle Name(s)",
      "type": "string"
    },
    "address": {
      "title": "Physical Address",
      "type": "string",
      "format": "textarea"
    },
    "affiliation": {
      "title": "Affiliations",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Affiliation",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Organization"
              ]
            }
          }
        }
      }
    },
    "alternateName": {
      "title": "Alternate Name",
      "type": "string",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "email": {
      "title": "E-Mail Address",
      "type": "string",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "familyName": {
      "title": "Family Name",
      "type": "string"
    },
    "givenName": {
      "title": "Given Name",
      "type": "string"
    },
    "identifier": {
      "title": "Identifers",
      "type": "array",
      "items": {
        "title": "Identifer",
        "type": "object",
        "properties": {
          "@type": {
            "default": "PropertyValue",
            "type": "string"
          },
          "name": {
            "title": "Identifier Type/Name",
            "type": "string"
          },
          "propertyID": {
            "title": "Property IDs",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "title": "Property ID",
              "type": "string",
              "cordra": {
                "type": {
                  "handleReference": {
                    "types": [
                      "DefinedTerm"
                    ]
                  }
                }
              }
            }
          },
          "url": {
            "title": "Identifier URL",
            "type": "string"
          },
          "value": {
            "title": "Identifier Value"
          }
        }
      }
    },
    "image": {
      "title": "Image URLs",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Image URL",
        "type": "string"
      }
    },
    "name": {
      "title": "Name",
      "type": "string",
      "cordra": {
        "preview": {
          "isPrimary": true,
          "showInPreview": true
        }
      }
    },
    "password": {
      "title": "Password",
      "type": "string",
      "format": "password",
      "cordra": {
        "auth": "password"
      }
    },
    "publicKey": {
      "type": "object",
      "cordra": {
        "auth": "publicKey"
      }
    },
    "requirePasswordChange": {
      "title": "Require Password Change",
      "description": "If true a new password must be set on next authentication.",
      "type": "boolean",
      "cordra": {
        "auth": "requirePasswordChange"
      }
    },
    "subjectOf": {
      "title": "Subject Of",
      "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "telephone": {
      "title": "Telephone",
      "type": "string"
    },
    "url": {
      "title": "URL",
      "type": "string"
    },
    "username": {
      "title": "Username",
      "type": "string",
      "cordra": {
        "auth": "username",
        "preview": {
          "showInPreview": true
        }
      }
    },
    "workLocation": {
      "title": "Work Location",
      "description": "A location where a person performs work (e.g., office, laboratory).",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Place",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Place"
              ]
            }
          }
        }
      }
    }
  }
}
