{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "DefinedTerm",
  "description": "This schema is for describing a Defined Term in Cordra.",
  "type": "object",
  "required": [
    "@id",
    "@context",
    "@type"
  ],
  "properties": {
    "description": {
      "title": "Description",
      "type": "string",
      "format": "textarea",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "@context": {
      "default": [
        "http://schema.org/",
        {
          "broader": "skos:broader",
          "closeMatch": "skos:closeMatch",
          "exactMatch": "skos:exactMatch",
          "mat": "https://pages.nist.gov/material-schema/",
          "narrower": "skos:narrower",
          "related": "skos:related",
          "skos": "http://www.w3.org/2004/02/skos/core#"
        }
      ],
      "type": "array"
    },
    "@id": {
      "type": "string",
      "cordra": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "@type": {
      "default": [
        "DefinedTerm",
        "mat:DefinedTerm"
      ],
      "type": "array"
    },
    "alternateName": {
      "title": "Alternate Name",
      "type": "string",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "broader": {
      "title": "Broader Terms",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Broader Term",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm"
              ]
            }
          }
        }
      }
    },
    "closeMatch": {
      "title": "Closely Matching Terms",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Closely Matching Term",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm"
              ]
            }
          }
        }
      }
    },
    "exactMatch": {
      "title": "Exactly Matching Terms",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Exactly Matching Term",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm"
              ]
            }
          }
        }
      }
    },
    "identifier": {
      "title": "Identifers",
      "type": "array",
      "items": {
        "title": "Identifer",
        "type": "object",
        "properties": {
          "@type": {
            "default": "PropertyValue",
            "type": "string"
          },
          "name": {
            "title": "Identifier Type/Name",
            "type": "string"
          },
          "propertyID": {
            "title": "Property IDs",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "title": "Property ID",
              "type": "string",
              "cordra": {
                "type": {
                  "handleReference": {
                    "types": [
                      "DefinedTerm"
                    ]
                  }
                }
              }
            }
          },
          "url": {
            "title": "Identifier URL",
            "type": "string"
          },
          "value": {
            "title": "Identifier Value"
          }
        }
      }
    },
    "image": {
      "title": "Image URLs",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Image URL",
        "type": "string"
      }
    },
    "inDefinedTermSet": {
      "title": "In Defined Term Sets",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "In Defined Term Set",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTermSet"
              ]
            }
          }
        }
      }
    },
    "isPartOf": {
      "title": "Is Part Of",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Is Part Of",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Collection"
              ]
            }
          }
        }
      }
    },
    "name": {
      "title": "Name",
      "type": "string",
      "cordra": {
        "preview": {
          "isPrimary": true,
          "showInPreview": true
        }
      }
    },
    "narrower": {
      "title": "Narrower Terms",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Narrower Term",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm"
              ]
            }
          }
        }
      }
    },
    "related": {
      "title": "Related Terms",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Related Term",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm"
              ]
            }
          }
        }
      }
    },
    "subjectOf": {
      "title": "Subject Of",
      "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "termCode": {
      "title": "Term Code",
      "type": "string"
    },
    "url": {
      "title": "URL",
      "type": "string"
    }
  }
}
