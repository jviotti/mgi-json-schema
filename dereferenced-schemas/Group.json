{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Group",
  "description": "This schema is for creating a group of authenticated users in Cordra for the purpose of access control.",
  "type": "object",
  "required": [
    "@id",
    "@context",
    "@type"
  ],
  "properties": {
    "description": {
      "title": "Description",
      "type": "string",
      "format": "textarea",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "@context": {
      "default": "http://schema.org/",
      "type": "string"
    },
    "@id": {
      "type": "string",
      "cordra": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "@type": {
      "default": "Organization",
      "type": "string"
    },
    "address": {
      "title": "Physical Address",
      "type": "string",
      "format": "textarea"
    },
    "alternateName": {
      "title": "Alternate Name",
      "type": "string",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "contactPoint": {
      "title": "Contact Points",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Contact Point",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Person",
                "User"
              ]
            }
          }
        }
      }
    },
    "email": {
      "title": "E-Mail Address",
      "type": "string"
    },
    "identifier": {
      "title": "Identifers",
      "type": "array",
      "items": {
        "title": "Identifer",
        "type": "object",
        "properties": {
          "@type": {
            "default": "PropertyValue",
            "type": "string"
          },
          "name": {
            "title": "Identifier Type/Name",
            "type": "string"
          },
          "propertyID": {
            "title": "Property IDs",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "title": "Property ID",
              "type": "string",
              "cordra": {
                "type": {
                  "handleReference": {
                    "types": [
                      "DefinedTerm"
                    ]
                  }
                }
              }
            }
          },
          "url": {
            "title": "Identifier URL",
            "type": "string"
          },
          "value": {
            "title": "Identifier Value"
          }
        }
      }
    },
    "image": {
      "title": "Image URLs",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Image URL",
        "type": "string"
      }
    },
    "member": {
      "title": "Member Organizations/Persons",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Member Organization/Person",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Organization",
                "User",
                "Person"
              ]
            }
          }
        }
      }
    },
    "memberOf": {
      "title": "Member of Organizations",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Member of Organization",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Organization"
              ]
            }
          }
        }
      }
    },
    "name": {
      "title": "Name",
      "type": "string",
      "cordra": {
        "preview": {
          "isPrimary": true,
          "showInPreview": true
        }
      }
    },
    "parentOrganization": {
      "title": "Parent Organizations",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Parent Organization",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Organization"
              ]
            }
          }
        }
      }
    },
    "subOrganization": {
      "title": "Child Organizations",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Child Organization",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Organization"
              ]
            }
          }
        }
      }
    },
    "subjectOf": {
      "title": "Subject Of",
      "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "telephone": {
      "title": "Telephone",
      "type": "string"
    },
    "url": {
      "title": "URL",
      "type": "string"
    },
    "users": {
      "title": "Users",
      "type": "array",
      "format": "table",
      "uniqueItems": true,
      "items": {
        "title": "User",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Group"
              ]
            }
          }
        }
      },
      "cordra": {
        "auth": "usersList"
      }
    }
  }
}
