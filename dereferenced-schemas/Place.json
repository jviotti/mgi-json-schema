{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Place",
  "description": "This schema is for describing a Place in Cordra.",
  "type": "object",
  "required": [
    "@id",
    "@context",
    "@type"
  ],
  "properties": {
    "description": {
      "title": "Description",
      "type": "string",
      "format": "textarea",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "@context": {
      "default": [
        "http://schema.org/",
        {
          "mat": "https://pages.nist.gov/material-schema/"
        }
      ],
      "type": "array"
    },
    "@id": {
      "type": "string",
      "cordra": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "@type": {
      "default": [
        "Place",
        "mat:Place"
      ],
      "type": "array"
    },
    "about": {
      "title": "About",
      "description": "This is for linking controlled vocabulary terms and parent projects.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Subject/Project",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm",
                "Project",
                "Collection",
                "ProcessHistory",
                "ProcessProtocol",
                "Material"
              ]
            }
          }
        }
      }
    },
    "accountablePerson": {
      "title": "Accountable Persons",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Accountable Person",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person"
              ]
            }
          }
        }
      }
    },
    "address": {
      "title": "Address",
      "type": "string"
    },
    "alternateName": {
      "title": "Alternate Name",
      "type": "string",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "containedInPlace": {
      "title": "Contained In Place",
      "description": "The basic containment relation between a place and one that contains it.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Place",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Place"
              ]
            }
          }
        }
      }
    },
    "containsPlace": {
      "title": "Contains Place",
      "description": "The basic containment relation between a place and another that it contains.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Place",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Place"
              ]
            }
          }
        }
      }
    },
    "geo": {
      "anyOf": [
        {
          "title": "GeoCoordinates",
          "type": "object",
          "properties": {
            "@type": {
              "default": "GeoCoordinates",
              "type": "string"
            },
            "elevation": {
              "title": "Elevation",
              "type": "number"
            },
            "latitude": {
              "title": "Latitude",
              "type": "number"
            },
            "longitude": {
              "title": "Longitude",
              "type": "number"
            }
          }
        },
        {
          "title": "GeoShape",
          "type": "object",
          "properties": {
            "@type": {
              "default": "GeoShape",
              "type": "string"
            },
            "box": {
              "title": "Box"
            },
            "circle": {
              "title": "Circle"
            },
            "elevation": {
              "title": "Elevation",
              "type": "number"
            },
            "line": {
              "title": "Line"
            },
            "polygon": {
              "title": "PolyGon"
            }
          }
        }
      ]
    },
    "identifier": {
      "title": "Identifers",
      "type": "array",
      "items": {
        "title": "Identifer",
        "type": "object",
        "properties": {
          "@type": {
            "default": "PropertyValue",
            "type": "string"
          },
          "name": {
            "title": "Identifier Type/Name",
            "type": "string"
          },
          "propertyID": {
            "title": "Property IDs",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "title": "Property ID",
              "type": "string",
              "cordra": {
                "type": {
                  "handleReference": {
                    "types": [
                      "DefinedTerm"
                    ]
                  }
                }
              }
            }
          },
          "url": {
            "title": "Identifier URL",
            "type": "string"
          },
          "value": {
            "title": "Identifier Value"
          }
        }
      }
    },
    "image": {
      "title": "Image URLs",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Image URL",
        "type": "string"
      }
    },
    "keywords": {
      "title": "Keywords",
      "description": "This is for user-defined terms.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Keyword",
        "type": "string"
      }
    },
    "name": {
      "title": "Name",
      "type": "string",
      "cordra": {
        "preview": {
          "isPrimary": true,
          "showInPreview": true
        }
      }
    },
    "subjectOf": {
      "title": "Subject Of",
      "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "telephone": {
      "title": "Telephone",
      "type": "string"
    },
    "url": {
      "title": "URL",
      "type": "string"
    }
  }
}
