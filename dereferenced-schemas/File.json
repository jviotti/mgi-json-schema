      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Material",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Material"
              ]
            }
          }
        }
      }
    },
    "measurementTechnique": {
