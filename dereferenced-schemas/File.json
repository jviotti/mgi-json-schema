      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm",
                "Instrument",
                "SoftwareApplication",
                "SoftwareSourceCode"
              ]
