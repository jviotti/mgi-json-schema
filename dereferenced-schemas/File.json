        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Dataset",
                "File",
                "MaterialStructure",
                "MaterialProperty",
                "MaterialPerformance",
                "TabularData",
                "TabularDataPackage"
              ]
            }
          }
        }
      }
    },
    "includedInDataCatalog": {
