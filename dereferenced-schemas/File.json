{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "File",
  "description": "This schema is for depositing and describing a file in Cordra.",
  "type": "object",
  "required": [
    "@id",
    "@context",
    "@type"
  ],
  "properties": {
    "description": {
      "title": "Description",
      "type": "string",
      "format": "textarea",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "@context": {
      "default": [
        "http://schema.org/",
        {
          "mat": "https://pages.nist.gov/material-schema/",
          "parameterControlled": "mat:parameterControlled"
        }
      ],
      "type": "array"
    },
    "@id": {
      "type": "string",
      "cordra": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "@type": {
      "default": [
        "Dataset",
        "mat:File"
      ],
      "type": "array"
    },
    "about": {
      "title": "About",
      "description": "The subject matter of this thing (e.g., DefinedTerm, Project, Material, Experiment, Study, etc.)",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "accountablePerson": {
      "title": "Accountable Persons",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Accountable Person",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person"
              ]
            }
          }
        }
      }
    },
    "alternateName": {
      "title": "Alternate Name",
      "type": "string",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "author": {
      "title": "Authors",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Author",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "citation": {
      "title": "Citations",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Citation",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "comment": {
      "title": "Comments",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Comment",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Comment"
              ]
            }
          }
        }
      }
    },
    "conditionObserved": {
      "title": "Conditions Observed",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Condition Observed",
        "$ref": "#/definitions/PropertyValue"
      }
    },
    "contributor": {
      "title": "Contributors",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Contributor",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "copyrightHolder": {
      "title": "Copyright Holders",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Copyright Holder",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "creator": {
      "title": "Creators",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Creator",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "dateCreated": {
      "title": "Date Created",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "dateModified": {
      "title": "Date Modified",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "datePublished": {
      "title": "Date Published",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "distribution": {
      "$ref": "#/definitions/DataDownload"
    },
    "editor": {
      "title": "Editors",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Editor",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person"
              ]
            }
          }
        }
      }
    },
    "exampleOfWork": {
      "$ref": "#/definitions/exampleOfWork"
    },
    "funder": {
      "title": "Funders",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Funder",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "hasPart": {
      "$ref": "#/definitions/hasPart"
    },
    "identifier": {
      "title": "Identifers",
      "type": "array",
      "items": {
        "title": "Identifer",
        "type": "object",
        "properties": {
          "@type": {
            "default": "PropertyValue",
            "type": "string"
          },
          "name": {
            "title": "Identifier Type/Name",
            "type": "string"
          },
          "propertyID": {
            "title": "Property IDs",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "title": "Property ID",
              "type": "string",
              "cordra": {
                "type": {
                  "handleReference": {
                    "types": [
                      "DefinedTerm"
                    ]
                  }
                }
              }
            }
          },
          "url": {
            "title": "Identifier URL",
            "type": "string"
          },
          "value": {
            "title": "Identifier Value"
          }
        }
      }
    },
    "image": {
      "title": "Image URLs",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Image URL",
        "type": "string"
      }
    },
    "includedInDataCatalog": {
      "$ref": "#/definitions/includedInDataCatalog"
    },
    "isBasedOn": {
      "$ref": "#/definitions/isBasedOn"
    },
    "isPartOf": {
      "$ref": "#/definitions/isPartOf"
    },
    "keywords": {
      "title": "Keywords",
      "description": "This is for user-defined terms.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Keyword",
        "type": "string"
      }
    },
    "license": {
      "title": "License",
      "type": "string"
    },
    "material": {
      "title": "Material",
      "$ref": "#/definitions/materialLinked"
    },
    "materialExtent": {
      "title": "Material Quantity",
      "$ref": "#/definitions/QuantitativeValue"
    },
    "materialReference": {
      "title": "Reference Material",
      "$ref": "#/definitions/materialLinked"
    },
    "materialReferenceExtent": {
      "title": "Reference Material Quantity",
      "$ref": "#/definitions/QuantitativeValue"
    },
    "measurementTechnique": {
      "$ref": "#/definitions/measurementTechnique"
    },
    "name": {
      "title": "Name",
      "type": "string",
      "cordra": {
        "preview": {
          "isPrimary": true,
          "showInPreview": true
        }
      }
    },
    "parameterControlled": {
      "title": "Parameters Controlled",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Parameter Controlled",
        "$ref": "#/definitions/PropertyValue"
      }
    },
    "provider": {
      "title": "Providers",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Provider",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "publisher": {
      "title": "Publishers",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Publisher",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "spatial": {
      "title": "Specific Spatial Location",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Place",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Place"
              ]
            }
          }
        }
      }
    },
    "subjectOf": {
      "title": "Subject Of",
      "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "thumbnailUrl": {
      "title": "Thumbnail URLs",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Thumbnail URL",
        "type": "string"
      }
    },
    "uploadDate": {
      "title": "Upload Date",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "url": {
      "title": "URL",
      "type": "string"
    },
    "variableMeasured": {
      "title": "Variables Measured",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Variable Measured",
        "$ref": "#/definitions/PropertyValue"
      }
    }
  },
  "definitions": {
    "DataDownload": {
      "title": "Distribution",
      "type": "object",
      "properties": {
        "@type": {
          "default": "DataDownload",
          "type": "string"
        },
        "contentUrl": {
          "title": "Content URL",
          "type": "string"
        },
        "encodingFormat": {
          "title": "Data Type",
          "type": "string",
          "cordra": {
            "type": {
              "handleReference": {
                "types": [
                  "DataFormat"
                ]
              }
            }
          }
        }
      }
    },
    "PropertyValue": {
      "type": "object",
      "properties": {
        "@type": {
          "default": "PropertyValue",
          "type": "string"
        },
        "conditionObserved": {
          "title": "Conditions Observed (nested)",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Condition Observed",
            "$ref": "#/definitions/PropertyValue"
          }
        },
        "maxValue": {
          "title": "Maximum Value"
        },
        "minValue": {
          "title": "Minimum Value"
        },
        "name": {
          "title": "Name",
          "type": "string"
        },
        "parameterControlled": {
          "title": "Parameters Controlled (nested)",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Parameter Controlled",
            "$ref": "#/definitions/PropertyValue"
          }
        },
        "propertyID": {
          "title": "Property IDs",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Property ID",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "DefinedTerm"
                  ]
                }
              }
            }
          }
        },
        "uncertainty": {
          "title": "Uncertainty"
        },
        "unitCode": {
          "title": "Unit Code",
          "type": "string",
          "cordra": {
            "type": {
              "handleReference": {
                "types": [
                  "UnitOfMeasurement"
                ]
              }
            }
          }
        },
        "unitText": {
          "title": "Unit Text",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "value": {
          "title": "Value"
        },
        "valueID": {
          "title": "Value IDs",
          "description": "A commonly used identifier for the value represented by the property. This can be used when the value of the property is a DefinedTerm.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Value ID",
            "type": "string",
            "cordra": {
              "type": {
                "handleReference": {
                  "types": [
                    "DefinedTerm"
                  ]
                }
              }
            }
          }
        },
        "valueReference": {
          "title": "Reference Values",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Reference Value",
            "type": "object",
            "properties": {
              "@type": {
                "default": "PropertyValue",
                "type": "string"
              },
              "name": {
                "title": "Name",
                "type": "string"
              },
              "propertyID": {
                "title": "Property ID/Name",
                "type": "string",
                "cordra": {
                  "type": {
                    "handleReference": {
                      "types": [
                        "DefinedTerm"
                      ]
                    }
                  }
                }
              },
              "unitCode": {
                "title": "Unit Code",
                "type": "string",
                "cordra": {
                  "type": {
                    "handleReference": {
                      "types": [
                        "UnitOfMeasurement"
                      ]
                    }
                  }
                }
              },
              "unitText": {
                "title": "Unit Text",
                "type": "string"
              },
              "value": {
                "title": "Value"
              },
              "valueID": {
                "title": "Value IDs",
                "description": "A commonly used identifier for the value represented by the property. This can be used when the value of the property is a DefinedTerm.",
                "type": "array",
                "uniqueItems": true,
                "items": {
                  "title": "Value ID",
                  "type": "string",
                  "cordra": {
                    "type": {
                      "handleReference": {
                        "types": [
                          "DefinedTerm"
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "variableMeasured": {
          "title": "Variables Measured (nested)",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Complex/Multidimensional Quantity",
            "$ref": "#/definitions/PropertyValue"
          }
        }
      }
    },
    "QuantitativeValue": {
      "type": "object",
      "properties": {
        "@type": {
          "default": "QuantitativeValue",
          "type": "string"
        },
        "name": {
          "title": "Name",
          "type": "string"
        },
        "unitCode": {
          "title": "Unit Code",
          "type": "string",
          "cordra": {
            "type": {
              "handleReference": {
                "types": [
                  "UnitOfMeasurement"
                ]
              }
            }
          }
        },
        "unitText": {
          "title": "Unit Text",
          "type": "string"
        },
        "value": {
          "title": "Value"
        }
      }
