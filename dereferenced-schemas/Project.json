{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Project",
  "description": "This schema is for describing a Project in Cordra.",
  "type": "object",
  "required": [
    "@id",
    "@context",
    "@type"
  ],
  "properties": {
    "description": {
      "title": "Description",
      "type": "string",
      "format": "textarea",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "@context": {
      "default": "http://schema.org/",
      "type": "string"
    },
    "@id": {
      "type": "string",
      "cordra": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "@type": {
      "default": "Project",
      "type": "string"
    },
    "about": {
      "title": "Subjects",
      "description": "This is for controlled vocabulary terms.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Subject",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm"
              ]
            }
          }
        }
      }
    },
    "alternateName": {
      "title": "Alternate Name",
      "type": "string",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "contactPoint": {
      "title": "Contact Points",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Contact Point",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Person",
                "User"
              ]
            }
          }
        }
      }
    },
    "dissolutionDate": {
      "title": "Ending Date",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "email": {
      "title": "E-Mail Address",
      "type": "string"
    },
    "foundingDate": {
      "title": "Starting Date",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "identifier": {
      "title": "Identifers",
      "type": "array",
      "items": {
        "title": "Identifer",
        "type": "object",
        "properties": {
          "@type": {
            "default": "PropertyValue",
            "type": "string"
          },
          "name": {
            "title": "Identifier Type/Name",
            "type": "string"
          },
          "propertyID": {
            "title": "Property IDs",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "title": "Property ID",
              "type": "string",
              "cordra": {
                "type": {
                  "handleReference": {
                    "types": [
                      "DefinedTerm"
                    ]
                  }
                }
              }
            }
          },
          "url": {
            "title": "Identifier URL",
            "type": "string"
          },
          "value": {
            "title": "Identifier Value"
          }
        }
      }
    },
    "image": {
      "title": "Image URLs",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Image URL",
        "type": "string"
      }
    },
    "isPartOf": {
      "title": "Is Part Of",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Is Part Of",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Collection"
              ]
            }
          }
        }
      }
    },
    "keywords": {
      "title": "Keywords",
      "description": "This is for user-defined terms.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Keyword",
        "type": "string"
      }
    },
    "member": {
      "title": "Participating Organizations/Persons",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Participating Organization/Person",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Organization",
                "User",
                "Person"
              ]
            }
          }
        }
      }
    },
    "memberOf": {
      "title": "Host Organizations",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Host Organization",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Organization"
              ]
            }
          }
        }
      }
    },
    "name": {
      "title": "Name",
      "type": "string",
      "cordra": {
        "preview": {
          "isPrimary": true,
          "showInPreview": true
        }
      }
    },
    "parentOrganization": {
      "title": "Parent Projects",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Parent Project",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Project"
              ]
            }
          }
        }
      }
    },
    "subOrganization": {
      "title": "Child Projects",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Child Project",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Project"
              ]
            }
          }
        }
      }
    },
    "subjectOf": {
      "title": "Subject Of",
      "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "url": {
      "title": "URL",
      "type": "string"
    }
  }
}
