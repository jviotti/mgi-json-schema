{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "DutyAction",
  "description": "This schema is for describing an Duty Action Entry in Cordra.",
  "type": "object",
  "required": [
    "@id",
    "@context",
    "@type"
  ],
  "properties": {
    "description": {
      "title": "Description",
      "type": "string",
      "format": "textarea",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "@context": {
      "default": [
        "http://schema.org/",
        {
          "mat": "https://pages.nist.gov/material-schema/"
        }
      ],
      "type": "array"
    },
    "@id": {
      "type": "string",
      "cordra": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "@type": {
      "default": [
        "Action",
        "mat:DutyAction"
      ],
      "type": "array"
    },
    "about": {
      "title": "About",
      "description": "This is for linking controlled vocabulary terms and parent projects.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Subject/Project",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm",
                "Project",
                "Collection"
              ]
            }
          }
        }
      }
    },
    "actionStatus": {
      "title": "Action Status",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Defined Term",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm"
              ]
            }
          }
        }
      }
    },
    "agent": {
      "title": "Agents",
      "description": "The direct performer or driver of the action (animate or inanimate).",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Agent",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "alternateName": {
      "title": "Alternate Name",
      "type": "string",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "endTime": {
      "title": "End Time",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "identifier": {
      "title": "Identifers",
      "type": "array",
      "items": {
        "title": "Identifer",
        "type": "object",
        "properties": {
          "@type": {
            "default": "PropertyValue",
            "type": "string"
          },
          "name": {
            "title": "Identifier Type/Name",
            "type": "string"
          },
          "propertyID": {
            "title": "Property IDs",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "title": "Property ID",
              "type": "string",
              "cordra": {
                "type": {
                  "handleReference": {
                    "types": [
                      "DefinedTerm"
                    ]
                  }
                }
              }
            }
          },
          "url": {
            "title": "Identifier URL",
            "type": "string"
          },
          "value": {
            "title": "Identifier Value"
          }
        }
      }
    },
    "image": {
      "title": "Image URLs",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Image URL",
        "type": "string"
      }
    },
    "instrument": {
      "title": "Helping Instrument",
      "description": "The instrument or tool that helped the agent perform the action (e.g., instrument used to perform the measurement).",
      "$ref": "#/definitions/measurementTechnique"
    },
    "keywords": {
      "title": "Keywords",
      "description": "This is for user-defined terms.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Keyword",
        "type": "string"
      }
    },
    "location": {
      "title": "Location",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Place",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Place"
              ]
            }
          }
        }
      }
    },
    "material": {
      "title": "Material",
      "description": "The material upon which the action is carried out",
      "$ref": "#/definitions/materialLinked"
    },
    "materialExtent": {
      "title": "Material Quantity",
      "$ref": "#/definitions/QuantitativeValue"
    },
    "materialReference": {
      "title": "Reference Material",
      "$ref": "#/definitions/materialLinked"
    },
    "materialReferenceExtent": {
      "title": "Reference Material Quantity",
      "$ref": "#/definitions/QuantitativeValue"
    },
    "name": {
      "title": "Name",
      "type": "string",
      "cordra": {
        "preview": {
          "isPrimary": true,
          "showInPreview": true
        }
      }
    },
    "object": {
      "title": "Object/Instrument",
      "description": "The non-material object or object instrrument upon which the action is carried out",
      "$ref": "#/definitions/measurementTechnique"
    },
    "participant": {
      "title": "Participants",
      "description": "Other co-agents that participated in the action indirectly.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Participant",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "startTime": {
      "title": "Start Time",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "subjectOf": {
      "title": "Subject Of",
      "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "url": {
      "title": "URL",
      "type": "string"
    }
  },
  "definitions": {
    "QuantitativeValue": {
      "type": "object",
      "properties": {
        "@type": {
          "default": "QuantitativeValue",
          "type": "string"
        },
        "name": {
          "title": "Name",
          "type": "string"
        },
        "unitCode": {
          "title": "Unit Code",
          "type": "string",
          "cordra": {
            "type": {
              "handleReference": {
                "types": [
                  "UnitOfMeasurement"
                ]
              }
            }
          }
        },
        "unitText": {
          "title": "Unit Text",
          "type": "string"
        },
        "value": {
          "title": "Value"
        }
      }
    },
    "materialLinked": {
      "title": "Materials",
      "description": "This field is for linking to any substance (e.g., sample, specimen, material, chemical, etc.), or a specific sup-sample (e.g., location on a larger artifact, sub-portion of a larger artifact, item within a collection of specimens, etc.).",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Material",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Material"
              ]
            }
          }
        }
      }
    },
    "measurementTechnique": {
      "title": "Synthesis/Measurement/Computational Technique or Instrument/Software Used",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "DefinedTerm",
                "Instrument",
                "SoftwareApplication",
                "SoftwareSourceCode"
              ]
            }
          }
        }
      }
    }
  }
}
