{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Citation",
  "description": "This schema is for describing a Citation in Cordra",
  "type": "object",
  "required": [
    "@id",
    "@context",
    "@type"
  ],
  "properties": {
    "description": {
      "title": "Description",
      "type": "string",
      "format": "textarea",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "@context": {
      "default": [
        "http://schema.org/",
        {
          "mat": "https://pages.nist.gov/material-schema/"
        }
      ],
      "type": "array"
    },
    "@id": {
      "type": "string",
      "cordra": {
        "type": {
          "autoGeneratedField": "handle"
        }
      }
    },
    "@type": {
      "default": [
        "CreativeWork",
        "mat:Citation"
      ],
      "type": "array"
    },
    "about": {
      "title": "About",
      "description": "The subject matter of this thing (e.g., DefinedTerm, Project, Material, Experiment, Study, etc.)",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "accountablePerson": {
      "title": "Accountable Persons",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Accountable Person",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person"
              ]
            }
          }
        }
      }
    },
    "alternateName": {
      "title": "Alternate Name",
      "type": "string",
      "cordra": {
        "preview": {
          "showInPreview": true
        }
      }
    },
    "author": {
      "title": "Authors",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Author",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "citation": {
      "title": "Citations",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Citation",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "comment": {
      "title": "Comments",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Comment",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Comment"
              ]
            }
          }
        }
      }
    },
    "contributor": {
      "title": "Contributors",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Contributor",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "copyrightHolder": {
      "title": "Copyright Holders",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Copyright Holder",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "creator": {
      "title": "Creators",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Creator",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "dateCreated": {
      "title": "Date Created",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "dateModified": {
      "title": "Date Modified",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "datePublished": {
      "title": "Date Published",
      "description": "A date value in ISO 8601 date format, e.g.: YYYY-MM-DD, YYYY-MM-DDThh:mm:ssTZD",
      "type": "string"
    },
    "editor": {
      "title": "Editors",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Editor",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person"
              ]
            }
          }
        }
      }
    },
    "funder": {
      "title": "Funders",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Funder",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "identifier": {
      "title": "Identifers",
      "type": "array",
      "items": {
        "title": "Identifer",
        "type": "object",
        "properties": {
          "@type": {
            "default": "PropertyValue",
            "type": "string"
          },
          "name": {
            "title": "Identifier Type/Name",
            "type": "string"
          },
          "propertyID": {
            "title": "Property IDs",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "title": "Property ID",
              "type": "string",
              "cordra": {
                "type": {
                  "handleReference": {
                    "types": [
                      "DefinedTerm"
                    ]
                  }
                }
              }
            }
          },
          "url": {
            "title": "Identifier URL",
            "type": "string"
          },
          "value": {
            "title": "Identifier Value"
          }
        }
      }
    },
    "image": {
      "title": "Image URLs",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Image URL",
        "type": "string"
      }
    },
    "keywords": {
      "title": "Keywords",
      "description": "This is for user-defined terms.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Keyword",
        "type": "string"
      }
    },
    "license": {
      "title": "License",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "type": "string",
      "cordra": {
        "preview": {
          "isPrimary": true,
          "showInPreview": true
        }
      }
    },
    "provider": {
      "title": "Providers",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Provider",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "publisher": {
      "title": "Publishers",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Publisher",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "User",
                "Person",
                "Organization"
              ]
            }
          }
        }
      }
    },
    "spatial": {
      "title": "Specific Spatial Location",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Place",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": [
                "Place"
              ]
            }
          }
        }
      }
    },
    "subjectOf": {
      "title": "Subject Of",
      "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Referenced Item",
        "type": "string",
        "cordra": {
          "type": {
            "handleReference": {
              "types": []
            }
          }
        }
      }
    },
    "thumbnailUrl": {
      "title": "Thumbnail URLs",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "title": "Thumbnail URL",
        "type": "string"
      }
    },
    "url": {
      "title": "URL",
      "type": "string"
    }
  }
}
